{
  "Discord": {
    "Commands": {
      "Prefix": "/.",
      "AcceptMentionPrefix": false
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "DSharpPlus": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "retainedFileCountLimit": 2,
                "fileSizeLimitBytes": 1048576
              }
            }
          ]
        }
      }
    ]
  }
}
