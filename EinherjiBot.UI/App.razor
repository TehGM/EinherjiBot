@using TehGM.EinherjiBot.UI.Layouts
@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <PolicyAuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <ClientOnly>
                            Not authorized!
                        </ClientOnly>
                        <ServerOnly>
                            Refreshing login..
                        </ServerOnly>
                    </NotAuthorized>
                    <Authorizing>
                        Logging you in...
                    </Authorizing>
                </PolicyAuthorizeRouteView>
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p role="alert">Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
</CascadingAuthenticationState>