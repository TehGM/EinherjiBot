@inherits EntityIdListBase<RoleInfoResponse>

<div class="id-list d-flex flex-column">
    @foreach (ulong id in base.Values)
    {
        <RoleIdListItem @key="id" Value="id" ValueChanged="base.OnValueChangedAsync" />
    }
    @if (this.AllowNewValues)
    {
        <RoleIdListItem @ref="base.NewItemField" ValueChanged="base.OnNewValueInputAsync" />
    }
</div>
